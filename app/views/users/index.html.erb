<section class="user-index">
<div class="user-background">
<%= form_tag '/users', :method => 'get',class: "navbar-form" do %>
  <div class="input-append user-search" id="search_user"style="text-align:center">
    <%= text_field_tag :search_user, params[:search_user], class: "span2", placeholder: "Search User by name" %>
    <button class="btn" type="submit"><i class="icon-search">Search</i></button>
  </div>
 <% end %>
 <!-- Div for black bar -->
 <div class="bar"></div>

<h1>Collaborators</h1>
<%if @users.count>0%>
      <% @users.each do |user| %>
        <a href=' /users/<%=user.id %>'><%= user.first_name+' '+user.last_name%></a>
          <img src='<%=user.image_url(:user_image)%>'>
          <% if current_user.present? and current_user.admin? %>
           <%= link_to 'Edit', edit_user_path(user) %>
          <% end %>
           <% if current_user.present? and current_user.admin? %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to remove user?' } %>
          <% end%>
      <% end %>
<% else %>
<p>There are no artists to show at this moment</p>
<% end %>

<% if current_user.present? && current_user.admin? %>

  <%= link_to 'New User',  new_user_path %> |
<% end %>
<%= link_to 'Back', events_path%>

<br>
</div>
</section>