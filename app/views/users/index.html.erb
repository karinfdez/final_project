<section class="user_background"></section>

<section>
<div class="search-bar">
<%= form_tag '/users', :method => 'get',class: "navbar-form" do %>
   
    <div class="input-append user-search" id="search_user"style="text-align:center">
      <%= text_field_tag :search_user, params[:search_user], class: "span2", placeholder: "Search User by name" %>
      <button class="btn" type="submit"><i class="icon-search">Search</i></button>
    </div>
    <% end %>
</div>
<div class="bar"></div>
</section>
<section class="user-index">
  
    
    <!-- Div for black bar -->
    <!-- <h1>Collaborators</h1> -->
    <div class="list_users">
      <div class="add_back">
      <% if current_user.present? && current_user.admin? %>
      <spam class="new_user"><%= link_to 'New User',  new_user_path %></spam>
      <% end %>
      <spam class="new_user"><%= link_to 'Back', users_path%></spam>
      </div>
      <br>
      <%if @users.count>0%>
      <!-- <div class="row"> -->
      <% @users.each do |user| %>
      
      <div class="paragraphs">
         
        <div class="col-md-4 users style='text-align:center'">
          <div class="span4">
            <a  href=' /users/<%=user.id %>'>
              <img style="float:left" src='<%=user.image_url(:user_image)%>'/>
              <spam class="content-heading"><h5><%=user.first_name+' '+user.last_name %></h5></spam>
            <spam class="text-rigth style='clear:both'"><%= user.email%></spam></a><br>
            <!-- <spam class="text-rigth"><%= user.users_description%></spam><br> -->
            <% if current_user.present? and current_user.admin? %>
            <%= link_to 'Edit', edit_user_path(user) %>
            <% end %>
            <% if current_user.present? and current_user.admin? %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to remove user?' } %>
            <% end%>
            
          </div>
        </div>
      </div>
      <% end %>
      <% else %>
      <p>There are no artists to show at this moment</p>
      <% end %>
    </div>
  </section>