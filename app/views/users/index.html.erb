<section class="user_background"></section>

<section>
<div class="search-bar">
<%= form_tag '/users', :method => 'get',class: "navbar-form" do %>
   
    <div class="input-append user-search" id="search_user"style="text-align:center">
      <%= text_field_tag :search_user, params[:search_user], class: "span2", placeholder: "Search User by name" %>
      <button class="btn search_user" type="submit"><i class="icon-search">Search</i></button>
    </div>
    <% end %>
</div>
<div class="bar user_search"></div>
</section>
<section class="user-index">
  
    
    <!-- Div for black bar -->
    <!-- <h1>Collaborators</h1> -->
    <div class="list_users clearfix">
      <div class="add_back">
      <% if current_user.present? && current_user.admin? %>
      <spam class="new_user"><%= link_to 'New User',  new_user_path,class: "new_user",class: "specific_new" %></spam>
      <% end %>
      <!-- <spam class="new_user"><%= link_to 'Back', users_path%></spam> -->
      </div>
      <br>
      <%if @users.count>0%>
      <!-- <div class="row"> -->
      <% @users.each_with_index do |user,index| %>
     
        <div class="col-md-4 users style='text-align:center'">
          <div class="span44 border">
            <a  href=' /users/<%=user.id %>'>
              <img class="image_users" style="float:left" src='<%=user.image_url(:user_image)%>'/>
              <spam class="content-heading"><h5 class="user_name"><%=user.first_name+' '+user.last_name %></h5></spam>
            <spam class="text-rigth style='clear:both'"><%= user.email%></spam></a><br>
           <!-- Shows chat buttons only if user is log in and only for the ones that are not login -->
            <% if current_user.present? && user.id!=current_user.id%>
             <!-- The data-sid attribute will hold our current users' id while data-rip attribute will hold the recipient's id. -->
         
              <%#= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                      "data-sid" => current_user.id, "data-rip" => user.id %>
            <% end %>
            <!-- <spam class="text-rigth"><%= user.users_description%></spam><br> -->
            <% if current_user.present? and current_user.admin? %>
            <%= link_to 'Edit', edit_user_path(user) %> <span class="div">|</span>
            <% end %>
            <% if current_user.present? and current_user.admin? %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to remove user?' } %>
            <% end%>
        </div>
      </div>
      <% end %>
      <% else %>
      <p class="no-event padding">There are no artists to show at this moment</p>
      <% end %>
    </div>
  </section>

  <footer class="footer-artist">
        <div class="container">
          <div class="asides clearfix">
            <aside class="logo">
            </aside>
          </div>
          <div class="copyright">
            <small>2015 Cajon Project</small>
            <div class="footer-icons">
              <a href='http://www.facebook.com'><%= image_tag 'Icono_Face.png', alt: 'Facebook logo', :class => "logo_footer"%></a>
              <a href='http://www.instagram.com'><%= image_tag 'Icono_Insta.png', alt: 'Instagram logo', :class => "logo_footer"%></a>
              <a href='http://twitter.com'><%= image_tag 'Icono_Twit.png', alt: 'Twitter logo', :class => "logo_footer"%></a>
            </div>
          </div>
        </div>
</footer> 