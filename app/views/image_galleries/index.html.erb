
<section class="gallery_background">

<section>
<div class="new_gallery">
  <%if current_user.present? && current_user.admin?%>
 
  <p class="image"><%= link_to 'Add new Image gallery' , new_image_gallery_path %></p>
  
 <% end %>
 </div>
 </section>
 <div class="list_images">
      <% @image_galleries.each do |image_gallery| %>
         <section>
         <div class="each_image"> 
          <a class="image_event" href="/image_galleries/<%=image_gallery.id%>"><p class="image_title"><%=image_gallery.title%>: <%=image_gallery.date%></p>
          <img src="<%= image_gallery.picture[0]%>"></a>
       
         <div class="edition">
        <%if current_user.present? && current_user.admin?%>
         <%= link_to 'Edit', edit_image_gallery_path(image_gallery) %> |
          <%= link_to 'Destroy', image_gallery, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>
         </div>
         </section>
      <% end %>
      
    </div>
</section>
<br>
    
 
 