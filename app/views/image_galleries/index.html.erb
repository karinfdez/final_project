<div class="page-wrap">
<section class="gallery_background clearfix">

</section>
 <div class="list_images">
 <%if current_user.present? && current_user.admin?%>
 
  <p class="image"><%= link_to 'Add new Image gallery' , new_image_gallery_path, id: "image-gal" %></p>
  <% end %>
  <%if @image_galleries%>
      <% @image_galleries.each do |image_gallery| %>
        <div class="row">
          <a class="image_event" href="/image_galleries/<%=image_gallery.id%>"><p class="image_title"><%=image_gallery.title%>: <%=image_gallery.date%></p>
          <img class="image-gallery-image" src="<%= image_gallery.picture[0]%>"></a>
       
         <div class="edition">
          <%if current_user.present? && current_user.admin?%>
           <%= link_to 'Edit', edit_image_gallery_path(image_gallery) %> |
            <%= link_to 'Destroy', image_gallery, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
         </div>
        </div>
      <% end %>
      <% else %>
      <p class="no-gallery">No images uploaded</p>
      <% end %>
    </div>
<!-- </section> -->
<br>
  </div>  
 <footer class="footer-artist footer-gallery">
        <div class="container">
          <div class="asides clearfix">
            <aside class="logo">
            </aside>
          </div>
          <div class="copyright">
            <small>2015 Cajon Project</small>
            <div class="footer-icons">
              <a href='http://www.facebook.com'><%= image_tag 'Icono_Face.png', alt: 'Facebook logo', :class => "logo_footer"%></a>
              <a href='http://www.instagram.com'><%= image_tag 'Icono_Insta.png', alt: 'Instagram logo', :class => "logo_footer"%></a>
              <a href='http://twitter.com'><%= image_tag 'Icono_Twit.png', alt: 'Twitter logo', :class => "logo_footer"%></a>
            </div>
          </div>
        </div>
</footer> 
 