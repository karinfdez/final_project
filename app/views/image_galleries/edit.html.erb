<div class="background_edit_gallery">
<!-- <div class="page-wrap"> -->

<h1 class="edit-title">Editing Image Gallery</h1>

<%#= render 'form' %>
<div class="edit-gallery">
	
	<%= form_for(@image_gallery) do |f| %>
	  <% if @image_gallery.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@image_gallery.errors.count, "error") %> prohibited this image_gallery from being saved:</h2>

	      <ul>
	      <% @image_gallery.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	   <div class="field gal_form">
	  <%= f.label :title, class:"title-edit" %>
	  <%= f.text_field :title, class: "title-input-edit"%><br>
	  <%= f.label :date, class: "date-edit" %>
	    <%= f.date_field :date, class: "date-input-edit" %><br>
	    <%= f.label :picture, class:"label-picture"%>
	    <div class="padding_uploader">
	    <%= f.file_field :picture, multiple: true,class:"picture-input-uploader" %><br>
	  </div>
	  
	  <div class="actions button_gallery">
	    <%= f.submit %>
	  </div>
	<% end %>
	</div>

<div class="show-back-gallery">
	<%= link_to 'Show', @image_gallery %> <span class="blue-line">|</span>
	<%= link_to 'Back', image_galleries_path %>
</div>
</div>
<footer class="footer-artist footer_edit_gallery">
				<div class="container">
					<div class="asides clearfix">
						<aside class="logo">
						</aside>
					</div>
					<div class="copyright">
						<small>2015 Cajon Project</small>
						<div class="footer-icons">
							<a href='http://www.facebook.com'><%= image_tag 'Icono_Face.png', alt: 'Facebook logo', :class => "logo_footer"%></a>
							<a href='http://www.instagram.com'><%= image_tag 'Icono_Insta.png', alt: 'Instagram logo', :class => "logo_footer"%></a>
							<a href='http://twitter.com'><%= image_tag 'Icono_Twit.png', alt: 'Twitter logo', :class => "logo_footer"%></a>
						</div>
					</div>
				</div>
</footer> 
