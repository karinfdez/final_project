<div class="form_new_user_margin image_new page-wrap gallery_new">
	<div class="new_image_gallery">
		<h3 class="gallery_title">New Image Gallery</h3>

		<%#= render 'form' %>
		<div class='new-gallery'>
			
			<%= form_for(@image_gallery) do |f| %>
			  <% if @image_gallery.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@image_gallery.errors.count, "error") %> prohibited this image_gallery from being saved:</h2>

			      <ul>
			      <% @image_gallery.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			   <div class="field gal_form">
			  <%= f.label :title %>
			  <%= f.text_field :title%><br>
			  <%= f.label :date %>
			    <%= f.date_field :date %><br>
			    <%= f.label :picture, class: "picture_title" %>
			    <div class="padding_uploader">
			    <%= f.file_field :picture, multiple: true %><br>
			  </div>
			  
			  <div class="actions button_gallery">
			    <%= f.submit %>
			  </div>
			<% end %>
			</div>
		</div>

		<%= link_to 'Back', image_galleries_path, class: "back_gallery" %>
	</div>

<footer class="footer-artist">
				<div class="container">
					<div class="asides clearfix">
						<aside class="logo">
						</aside>
					</div>
					<div class="copyright">
						<small>2015 Cajon Project</small>
						<div class="footer-icons">
							<a href='http://www.facebook.com'><%= image_tag 'Icono_Face.png', alt: 'Facebook logo', :class => "logo_footer"%></a>
							<a href='http://www.instagram.com'><%= image_tag 'Icono_Insta.png', alt: 'Instagram logo', :class => "logo_footer"%></a>
							<a href='http://twitter.com'><%= image_tag 'Icono_Twit.png', alt: 'Twitter logo', :class => "logo_footer"%></a>
						</div>
					</div>
				</div>
</footer> 
</div>