<section class="post_background page-wrap"></section>	
<!-- <section class="list_posts"> -->
<div class="searcher">
<%= form_tag '/posts', :method => 'get',class: "navbar-form" do %>
	<div class="input-append post_input">
    <%= text_field_tag :search_title, params[:search_title ], class: "post", placeholder: "Search Posts by Title" %>
    <%= text_field_tag :search, params[:search], class: "post", placeholder: "Search Post by Author" %>
    <button class="btn btn-post" type="submit"><i class="icon-search">Search</i></button>
  </div>
<% end %>
<div class="bar"></div>
<!-- <section class="post_list"> -->
<div class="top_list">
<%if @posts_title.present?%>
<h4 class="post-title">
<div class="row padding_posts">
	<% @posts_title.each do |post| %>
	<div class=" list_post col-md-6 the_post style=text-align:center">
	  <!-- <div class="post"> -->
	    Post title: <%= link_to post.title, post,class: 'title_cap' %>
		<%if post.user%> 
	      <p class="post-author">Author:<%=  post.user.first_name+' '+post.user.last_name%></p>
	    <% end %>
	  <%if current_user.present? && current_user.admin?%>
		  <div class="destroy">
			<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you want to remove post?' } %>
		 </div>
	 <% end%>
	 </div>
	  <!-- </div> -->
	<% end %>
</div>
	  </h4>
	<%# end %>

<% else%>
	<p class="no-event">No post available.</p>
<% end %>
</div>
<!-- </section> -->

<footer class="footer-artist post_footer">
				<div class="container">
					<div class="asides clearfix">
						<aside class="logo">
						</aside>
					</div>
					<div class="copyright">
						<small>2015 Cajon Project</small>
						<div class="footer-icons">
							<a href='http://www.facebook.com'><%= image_tag 'Icono_Face.png', alt: 'Facebook logo', :class => "logo_footer"%></a>
							<a href='http://www.instagram.com'><%= image_tag 'Icono_Insta.png', alt: 'Instagram logo', :class => "logo_footer"%></a>
							<a href='http://twitter.com'><%= image_tag 'Icono_Twit.png', alt: 'Twitter logo', :class => "logo_footer"%></a>
						</div>
					</div>
				</div>
</footer> 
