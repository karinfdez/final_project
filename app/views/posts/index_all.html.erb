<section class="post_background"></section>	
<section class="list_posts">
<div class="searcher">
<%= form_tag '/posts', :method => 'get',class: "navbar-form" do %>
	<div class="input-append post_input">
    <%= text_field_tag :search_title, params[:search_title ], class: "post", placeholder: "Search Posts by Title" %>
    <%= text_field_tag :search, params[:search], class: "post", placeholder: "Search Post by Author" %>
    <button class="btn" type="submit"><i class="icon-search">Search</i></button>
  </div>
<% end %>
<div class="bar"></div>
<!-- <section class="post_list"> -->
<%counter=1%>
<div class="top_list">
<%if @posts_title.present?%>
	<% @posts_title.each do |post| %>
	<div class="col-md-3 the_post style="text-align:center">
	  <div class="post">
	    <h4 class="post-title"><%=counter%>.Post title: <%= link_to post.title, post %></h4>
		<%if post.user%> 
	    <spam><h6 class="post-author">Author:<%=  post.user.first_name%></h6></spam>
	  <% else %>
	  	<h6>Guest</h6>
	  <% end %>
	  <%if current_user.present? && current_user.admin?%>
		<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you want to remove post?' } %>
		<% end%>
	    <%counter+=1%>
	  </div>
	  </div>
	<% end %>
<% else%>
	<p>No post available.</p>
<% end %>
</div>
</section>


